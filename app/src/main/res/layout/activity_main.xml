<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center|top"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Activities Orientations"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/vertical_only_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Vertical Only"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/horizontal_only_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Horizontal Only"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/vertical_and_horizontal_only_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Vertical and Horizontal Only"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tablet_horizontal_and_phone_vertical_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Tablet Horizontal &amp; Phone Vertical"/>

</LinearLayout>